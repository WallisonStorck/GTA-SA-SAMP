{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Pawn (main.pwn)",
      "type": "shell",
      "command": "C:\\MyServerStorcks\\pawno\\pawncc.exe",
      "args": [
        "C:\\MyServerStorcks\\gamemodes\\main.pwn",
        "-oC:\\MyServerStorcks\\gamemodes\\main.amx",
        "-;+", // Mostra mais detalhes
        "-(+", // Mostra warnings formatados
        "-d3" // Geração de debug (opcional)
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": true,
        "focus": false,
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
